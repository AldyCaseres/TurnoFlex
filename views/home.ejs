<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>TurnoFlex</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #0f172a;
      color: white;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem;
    }

    .logo {
      font-weight: bold;
      font-size: 1.4rem;
    }

    .user-icon {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: #334155;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
    }

    .schedule {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      padding: 1rem;
    }

    .day-column {
      background: #020617;
      border-radius: 12px;
      min-width: 180px;
      padding: 1rem;
    }

    .day-title {
      text-align: center;
      font-weight: bold;
      margin-bottom: 1rem;
    }

    .slot {
      padding: 0.6rem;
      border-radius: 8px;
      text-align: center;
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
    }

    .libre {
      background: #16a34a;
    }

    .ocupado {
      background: #475569;
    }
  </style>
</head>

<body>

<!-- TOP BAR -->
<div class="top-bar">
  <div class="logo">TurnoFlex</div>

  <a href="/login" class="user-icon text-white text-decoration-none">
    ðŸ‘¤
  </a>
</div>

<!-- HORARIOS -->
<div class="schedule">

  <% for (const dia in turnosPorDia) { %>
    <div class="day-column">
      <div class="day-title">
        <%= new Date(dia).toLocaleDateString('es-AR', {
          weekday: 'long',
          day: 'numeric',
          month: 'numeric'
        }) %>
      </div>

      <% turnosPorDia[dia].forEach(turno => { %>
        <div class="slot <%= turno.estado === 'libre' ? 'libre' : 'ocupado' %>">
          <%= turno.hora_inicio.slice(0,5) %> - <%= turno.hora_fin.slice(0,5) %>
        </div>
      <% }) %>

    </div>
  <% } %>

</div>

</body>
</html>
